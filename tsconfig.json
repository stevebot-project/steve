{
    "extends": [
        "@sapphire/ts-config",
        "@sapphire/ts-config/decorators"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "#utils/*": ["src/lib/util/*.ts"],
            "#lib/*": ["src/lib/*.ts"],
            "#root/*": ["./*.ts"],
        },
        "rootDir": "."
    },
    "include": ["src", "src/**/*.json"]
}
