{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@utils/*": ["src/lib/util/*"],
			"@lib/*": ["src/lib/*"],
			"@root/*": ["*"]
		},
		"skipLibCheck": true
	},
	"include": ["."],
	"exclude": ["dist", "node_modules"]
}
